<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/IMAGE_VIEW_EMAIL_ICON"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/email"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TEXTVIEW_EMAIL_SUBJECT"
        android:layout_toEndOf="@+id/IMAGE_VIEW_EMAIL_ICON"
        android:layout_toRightOf="@+id/IMAGE_VIEW_EMAIL_ICON"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_alignTop="@+id/IMAGE_VIEW_EMAIL_ICON"
        android:text="Subject"
        android:textStyle="bold"
        android:textSize="30sp"
        />


</RelativeLayout>