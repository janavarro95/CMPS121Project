<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".DesktopActivity">

    <ImageButton
        android:id="@+id/terminalButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="357dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142"
        app:srcCompat="@drawable/terminal" />

    <ImageButton
        android:id="@+id/mailButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="380dp"
        android:layout_marginEnd="292dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="292dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="23dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terminalButton"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/email" />

    <ImageButton
        android:id="@+id/newsButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="266dp"
        android:layout_marginEnd="290dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="290dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mailButton"
        app:layout_constraintVertical_bias="0.388"
        app:srcCompat="@drawable/news" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="186dp"
        android:layout_marginEnd="296dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="296dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="27dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsButton"
        app:srcCompat="@drawable/settings" />
</android.support.constraint.ConstraintLayout>