<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/desktopBlue"
    tools:context=".DesktopActivity">

    <ImageButton
        android:id="@+id/terminalButton"
        android:layout_width="64dp"
        android:layout_height="64dp"


        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"


        android:background="@null"
        android:onClick="terminal_click"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsButton"
        app:srcCompat="@drawable/terminal" />

    <ImageButton
        android:id="@+id/mailButton"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="16dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terminalButton"
        app:srcCompat="@drawable/email" />

    <ImageButton
        android:id="@+id/newsButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/news" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="16dp"
        android:background="@null"
        android:onClick="optionsClick"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mailButton"
        app:srcCompat="@drawable/settings" />

    <TextView
        android:id="@+id/DESKTOP_ACTIVITY_TEXT_VIEW_MEMES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Memes"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DESKTOP_ACTIVITY_IMAGE_BUTTON_FOLDER_MEMES" />

    <ImageButton
        android:id="@+id/DESKTOP_ACTIVITY_IMAGE_BUTTON_FOLDER_MEMES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:onClick="memesFolderClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/folder" />

    <ImageView
        android:id="@+id/DESKTOP_ACTIVITY_IMAGE_BUTTON_SIMON_SAYS"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="224dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/terminalButton"
        app:layout_constraintTop_toBottomOf="@+id/DESKTOP_ACTIVITY_TEXT_VIEW_MEMES"
        app:srcCompat="@drawable/downarrow" />

</android.support.constraint.ConstraintLayout>