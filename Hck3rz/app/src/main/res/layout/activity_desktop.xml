<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/desktopBlue"
    tools:context=".DesktopActivity">

    <ImageButton
        android:id="@+id/terminalButton"
        android:layout_width="64dp"
        android:layout_height="64dp"


        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"


        android:background="@null"
        android:onClick="terminal_click"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsButton"
        app:srcCompat="@drawable/terminal" />

    <ImageButton
        android:id="@+id/mailButton"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="16dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terminalButton"
        app:srcCompat="@drawable/email" />

    <ImageButton
        android:id="@+id/newsButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/news" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="16dp"
        android:background="@null"
        android:onClick="optionsClick"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mailButton"
        app:srcCompat="@drawable/settings" />

    <TextView
        android:id="@+id/DESKTOP_ACTIVITY_TEXT_VIEW_MEMES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Memes"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DESKTOP_ACTIVITY_IMAGE_BUTTON_FOLDER_MEMES" />

    <ImageButton
        android:id="@+id/DESKTOP_ACTIVITY_IMAGE_BUTTON_FOLDER_MEMES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:onClick="memesFolderClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/folder" />

    <ImageView

        android:id="@+id/DESKTOP_ACTIVITY_IMAGE_VIEW_NEW_MAIL_ICON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="294dp"
        android:layout_marginRight="294dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terminalButton"
        app:srcCompat="@drawable/newmailnotification" />

    <ImageView
        android:id="@+id/TaskBar"
        android:layout_width="400dp"
        android:layout_height="35dp"
        android:layout_marginTop="536dp"
        android:scaleType="fitXY"
        android:tint="@color/grey"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/editbox_dropdown_light_frame" />

    <ImageView
        android:id="@+id/TimeView"
        android:layout_width="75dp"
        android:layout_height="31dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="15dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toEndOf="@+id/TaskBar"
        app:srcCompat="@android:drawable/editbox_dropdown_light_frame" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="2dp"
        android:layout_marginStart="6dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/TaskBar"
        app:layout_constraintEnd_toEndOf="@+id/TimeView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TimeView" />

</android.support.constraint.ConstraintLayout>